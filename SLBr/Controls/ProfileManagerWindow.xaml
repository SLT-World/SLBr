<Window x:Class="SLBr.Controls.ProfileManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SLBr.Controls"
        mc:Ignorable="d"
        Title="Profile Manager - SLBr" WindowStartupLocation="CenterScreen"
        Height="600" Width="900" DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Window.Resources>
        <ResourceDictionary Source="../WinUIStyleDictionary.xaml"/>
    </Window.Resources>
    <Grid Background="{StaticResource PrimaryBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Image Margin="0,20,0,25" Width="50" Height="50" x:Name="Icon" RenderOptions.BitmapScalingMode="LowQuality" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" Source="pack://application:,,,/Resources/SLBr.ico">
            <Image.Triggers>
                <EventTrigger RoutedEvent="MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="Icon" Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)" To="180" Duration="0:0:0.5" AutoReverse="False"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="Icon" Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)" To="0" Duration="0:0:0.5" AutoReverse="False"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Image.Triggers>
            <Image.RenderTransform>
                <RotateTransform x:Name="NoFreeze"/>
            </Image.RenderTransform>
        </Image>
        <TextBlock Grid.Row="1" FontWeight="DemiBold" Margin="0,0,0,25" HorizontalAlignment="Center" FontSize="25">Choose a profile</TextBlock>
        <ScrollViewer Grid.Row="2" local:SmoothScrollBehavior.Enable="True" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="ProfilesList">
                <ItemsControl.Resources>
                    <DataTemplate x:Key="UserTemplate">
                        <Border MouseUp="OpenProfile_Click" Background="{StaticResource SecondaryBrush}" Margin="10" Height="175" Width="150" CornerRadius="5" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Border Width="75" Height="75" Background="{Binding Brush}" CornerRadius="1000" Margin="10">
                                    <TextBlock Foreground="{Binding Foreground}" FontWeight="DemiBold" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center" FontSize="22" Text="{Binding Initial}"/>
                                </Border>
                                <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0" Grid.Row="1" Padding="10" Height="60">
                                    <DockPanel>
                                        <Button Visibility="{Binding Default, Converter={StaticResource OppositeBooleanToVisibility}}" Click="DeleteButton_Click" DockPanel.Dock="Right" ToolTip="Delete" Content="&#xe74d;" Margin="0,0,0,0" Style="{StaticResource IconButton}"/>
                                        <Button Visibility="{Binding Default, Converter={StaticResource OppositeBooleanToVisibility}}" Click="SetDefaultButton_Click" DockPanel.Dock="Right" ToolTip="Set as Default" Content="&#xe734;" Margin="0,0,5,0" Style="{StaticResource IconButton}"/>
                                        <TextBlock VerticalAlignment="Center" ToolTip="{Binding Name}" Text="{Binding Name}" TextTrimming="CharacterEllipsis" DockPanel.Dock="Left"/>
                                    </DockPanel>
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>
                    <DataTemplate x:Key="GuestTemplate">
                        <Border MouseUp="OpenProfile_Click" Background="{StaticResource SecondaryBrush}" Margin="10" Height="175" Width="150" CornerRadius="5" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Border Width="75" Height="75" Background="{StaticResource BorderBrush}" CornerRadius="1000" Margin="10">
                                    <TextBlock FontWeight="DemiBold" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="{StaticResource IconFontFamily}" TextAlignment="Center" FontSize="22" Text="&#xee57;"/>
                                </Border>
                                <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0" Grid.Row="1" Padding="10" Height="60">
                                    <TextBlock VerticalAlignment="Center" ToolTip="{Binding Name}" Text="{Binding Name}" TextTrimming="CharacterEllipsis"/>
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>
                    <DataTemplate x:Key="AddTemplate">
                        <Border MouseUp="NewProfile" Background="{StaticResource PrimaryBrush}" Margin="10" Height="175" Width="150" CornerRadius="5" BorderThickness="1">
                            <Border.BorderBrush>
                                <DrawingBrush Viewport="0,0,8,8" ViewportUnits="Absolute" TileMode="Tile">
                                    <DrawingBrush.Drawing>
                                        <DrawingGroup>
                                            <GeometryDrawing Brush="{StaticResource BorderBrush}">
                                                <GeometryDrawing.Geometry>
                                                    <GeometryGroup>
                                                        <RectangleGeometry Rect="0,0,50,50" />
                                                        <RectangleGeometry Rect="50,50,50,50" />
                                                    </GeometryGroup>
                                                </GeometryDrawing.Geometry>
                                            </GeometryDrawing>
                                        </DrawingGroup>
                                    </DrawingBrush.Drawing>
                                </DrawingBrush>
                            </Border.BorderBrush>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Border Width="75" Height="75" Background="{StaticResource BorderBrush}" CornerRadius="1000" Margin="10">
                                    <TextBlock FontWeight="DemiBold" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="{StaticResource IconFontFamily}" TextAlignment="Center" FontSize="22" Text="&#xe710;"/>
                                </Border>
                                <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0" Grid.Row="1" Padding="10" Height="60">
                                    <TextBlock VerticalAlignment="Center" ToolTip="{Binding Name}" Text="{Binding Name}" TextAlignment="Center" TextTrimming="CharacterEllipsis"/>
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.Resources>
                <ItemsControl.ItemTemplateSelector>
                    <local:ProfileTemplateSelector UserTemplate="{StaticResource UserTemplate}" GuestTemplate="{StaticResource GuestTemplate}" AddTemplate="{StaticResource AddTemplate}"/>
                </ItemsControl.ItemTemplateSelector>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>
        <Border Padding="20" Grid.Row="3" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0">
            <CheckBox HorizontalAlignment="Center" x:Name="StartupProfilesCheckBox" Click="StartupProfilesCheckBox_Click" Content="Show on startup" Width="Auto"/>
        </Border>
    </Grid>
</Window>
