        </TabControl>
        <Border Grid.Row="2" Grid.ColumnSpan="3" Visibility="Collapsed" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0" x:Name="DownloadContainer" Height="33" HorizontalAlignment="Stretch">
            <DockPanel x:Name="DownloadPanel" Margin="5" HorizontalAlignment="Left">
                <TextBlock x:Name="DownloadFileName" Foreground="{DynamicResource FontBrush}" Text="FileName" FontFamily="None" VerticalAlignment="Center"/>
                <Grid Margin="5,0" Width="150">
                    <ProgressBar x:Name="DownloadProgressBar" Foreground="{DynamicResource _Blue}" Height="17.5" Background="{DynamicResource PrimaryBrush}" BorderBrush="{DynamicResource BorderBrush}"/>
                    <Button Foreground="{DynamicResource FontBrush}" Style="{DynamicResource AddButton}" FontFamily="None" x:Name="DownloadOpenFileButton" Content="Open" Click="ButtonAction" Visibility="Collapsed"/>
                    <TextBlock x:Name="DownloadProgressText" Text="" FontFamily="None" VerticalAlignment="Center" Foreground="{DynamicResource FontBrush}"/>
                </Grid>
                <!--<Button Content="tfwdfewweff" Style="{DynamicResource DownloadItemButton}"/>
                <Button Content="tfwdfewweff" Style="{DynamicResource DownloadItemButton}"/>
                <Button Content="tfwdfewweff" Style="{DynamicResource DownloadItemButton}"/>-->
            </DockPanel>
        </Border>
