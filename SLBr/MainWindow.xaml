                                    <Setter Property="FontFamily" Value="Arial"/>
                                    <Setter Property="Header" Value="{Binding Name}"/>
                                    <Setter Property="Tag" Value="{Binding Arguments}"/>
                                    <EventSetter Event="Click" Handler="ButtonAction"/>
                                </Style>
                            </MenuItem.ItemContainerStyle>
                        </MenuItem>
                    </Menu>
                    <Button DockPanel.Dock="Right" Margin="0" Height="23" Width="23" ToolTip="Add to favourites" x:Name="FavouriteButton" Style="{DynamicResource AddButton}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Content="&#xEB51;" Foreground="{DynamicResource ControlFontBrush}" Click="ButtonAction" Tag="11"/>
                    <Button DockPanel.Dock="Right" Margin="0" Height="23" Width="23" ToolTip="Reader mode" x:Name="ReaderModeButton" Style="{DynamicResource AddButton}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Content="&#xE736;" Foreground="{DynamicResource ControlFontBrush}" Click="ButtonAction" Tag="26"/>
                    <Button DockPanel.Dock="Right" Margin="0" Height="23" Width="23" ToolTip="Translate to English" Style="{DynamicResource AddButton}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Content="&#xF2B7;" Foreground="{DynamicResource ControlFontBrush}" Click="ButtonAction" Tag="27"/>
                    <TextBox x:Name="AddressBox" Margin="5,0" Height="23" Width="auto" FontFamily="arial" Padding="0" KeyDown="AddressBox_KeyDown" GotFocus="AddressBox_GotFocus" LostFocus="AddressBox_LostFocus" MouseEnter="AddressBox_MouseEnter" MouseLeave="AddressBox_MouseLeave" Tag="Loading..."/>
                </DockPanel>
                <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0" x:Name="FavouriteContainer" Height="33" Grid.Row="1" HorizontalAlignment="Stretch">
                    <ScrollViewer x:Name="FavouriteScrollViewer" VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Hidden" PreviewMouseWheel="FavouriteScrollViewer_PreviewMouseWheel">
                        <ItemsControl x:Name="FavouritesPanel" HorizontalAlignment="Stretch" ItemsSource="{Binding Favourites}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <DockPanel IsItemsHost="True" Margin="5" HorizontalAlignment="Left"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button ToolTip="{Binding Address}" Style="{DynamicResource FavouriteUrlButton}" Content="{Binding Name}" Margin="2.5,0" Click="ButtonAction" MouseDown="MiddleMouseButtonAction" Tag="{Binding Arguments}" Height="23"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
                <ItemsControl x:Name="PromptsPanel" Grid.Row="2" HorizontalAlignment="Stretch" ItemsSource="{Binding Prompts}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="{DynamicResource BorderBrush}" Height="33" BorderThickness="0,1,0,0">
                                <DockPanel Margin="5">
                                    <TextBlock Visibility="{Binding IconVisibility}" VerticalAlignment="Center" TextAlignment="Center" Text="{Binding IconText}" FontSize="12.5" Foreground="{DynamicResource FontBrush}" Margin="7.5,0">
                                        <TextBlock.LayoutTransform>
                                            <RotateTransform Angle="{Binding IconRotation}"/>
                                        </TextBlock.LayoutTransform>
                                    </TextBlock>
                                    <Button DockPanel.Dock="Right" Style="{DynamicResource AddButton}" Content="&#xE711;" Margin="0" Height="23" Width="23" Foreground="{DynamicResource ControlFontBrush}" Click="ButtonAction" Tag="{Binding CloseButtonTag}" ToolTip="Dismiss"/>
                                    <Button ToolTip="{Binding ButtonToolTip}" Visibility="{Binding ButtonVisibility}" FontFamily="None" DockPanel.Dock="Right" MinWidth="150" Padding="7.5,1" BorderBrush="{DynamicResource BorderBrush}" Margin="5,0" Style="{DynamicResource AddButton}" Content="{Binding ButtonContent}" Click="ButtonAction" Tag="{Binding ButtonTag}"/>
                                    <TextBlock Foreground="{DynamicResource FontBrush}" FontFamily="None" Text="{Binding Content}" VerticalAlignment="Center" TextWrapping="NoWrap"/>
                                </DockPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0" Grid.Row="3" Height="5" HorizontalAlignment="Stretch">
                    <ProgressBar BorderThickness="0" x:Name="WebsiteLoadingProgressBar" IsEnabled="False" IsIndeterminate="False" Background="{DynamicResource PrimaryBrush}" Foreground="{DynamicResource BorderBrush}"/>
                </Border>
            </Grid>
        </Border>
        <TabControl Grid.ColumnSpan="2" x:Name="Tabs" Grid.Row="1" SelectionChanged="Tabs_SelectionChanged">
