        <Border x:Name="StatusBar" HorizontalAlignment="Left" Grid.ColumnSpan="3" VerticalAlignment="Bottom" Grid.Row="1" Height="25" Width="400" Background="{DynamicResource UnselectedTabBrush}" CornerRadius="0,5,0,0">
            <TextBlock x:Name="StatusMessage" Margin="5" FontFamily="None" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" Foreground="{DynamicResource FontBrush}"/>
        </Border>
    </Grid>
