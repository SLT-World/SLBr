        <ResourceDictionary Source="StyleResourceDictionary.xaml"/>
    </Window.Resources>
    <Grid Background="{DynamicResource PrimaryBrush}">
        <TabControl BorderThickness="0,1,0,0" BorderBrush="{DynamicResource BorderBrush}" x:Name="BrowserTabs" Padding="0">
