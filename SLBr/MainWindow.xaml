                        <TextBlock Text="X" Width="20" Height="20"/>
                    </StackPanel>
                </DataTemplate>
            </TabControl.ItemTemplate>-->
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <UserControl Content="{Binding Content}" Margin="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
        <!--<Border Grid.Row="1" Grid.ColumnSpan="2" Visibility="Visible" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0" x:Name="DownloadContainer" Height="33" Margin="0,363,0,-33" Grid.RowSpan="3">
            <ItemsControl x:Name="DownloadPanel">
