<Window x:Class="SLBr.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SLBr"
        xmlns:controls="clr-namespace:SLBr.Controls"
        xmlns:WinUI="clr-namespace:WinUI"
        mc:Ignorable="d"
        Title="SLBr" MouseEnter="Window_MouseEnter" Height="450" Width="800" WindowStyle="SingleBorderWindow" ResizeMode="CanResize" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen" WindowState="Maximized" StateChanged="Window_StateChanged" SizeChanged="Window_SizeChanged" LocationChanged="Window_LocationChanged" Activated="Window_Activated" Deactivated="Window_Deactivated">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="WinUIStyleDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <DataTemplate x:Key="OverlayIcon">
                <Grid Width="16" Height="16">
                    <Ellipse Fill="{Binding Brush}"/>
                    <TextBlock Text="{Binding Initial}" TextAlignment="Center" Foreground="{Binding Foreground}" FontWeight="ExtraBold" Height="16" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="11"/>
                </Grid>
            </DataTemplate>

            <Style x:Key="CaptionButtonStyle" TargetType="Button">
                <Setter Property="Width" Value="46"/>
                <Setter Property="Height" Value="45"/>
                <Setter Property="FontSize" Value="10"/>
                <Setter Property="FontFamily" Value="Segoe Fluent Icons"/>
                <Setter Property="Foreground" Value="{DynamicResource FontBrush}"/>
                <Setter Property="Padding" Value="0"/>
                <Setter Property="WindowChrome.IsHitTestVisibleInChrome" Value="True"/>
                <Setter Property="IsTabStop" Value="False"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border Background="{StaticResource SecondaryBrush}" BorderThickness="0" SnapsToDevicePixels="true">
                                <Border x:Name="Border" Background="Transparent" BorderThickness="0" SnapsToDevicePixels="true">
                                    <ContentPresenter x:Name="contentPresenter" Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center" Focusable="False" RecognizesAccessKey="True"/>
                                </Border>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="true">
                                    <Setter TargetName="Border" Property="Background">
                                        <Setter.Value>
                                            <SolidColorBrush Color="{DynamicResource GrayBrushColor}" Opacity="0.1"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="true">
                                    <Setter TargetName="Border" Property="Background">
                                        <Setter.Value>
                                            <SolidColorBrush Color="{DynamicResource GrayBrushColor}" Opacity="0.2"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style x:Key="CaptionCloseButtonStyle" TargetType="Button" BasedOn="{StaticResource CaptionButtonStyle}">
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border Background="{StaticResource SecondaryBrush}" BorderThickness="0" SnapsToDevicePixels="true">
                                <Border x:Name="Border" Background="Transparent" BorderThickness="0" SnapsToDevicePixels="true">
                                    <ContentPresenter x:Name="contentPresenter" Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center" Focusable="False" RecognizesAccessKey="True"/>
                                </Border>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="true">
                                    <Setter TargetName="Border" Property="Background" Value="Red"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="true">
                                    <Setter TargetName="Border" Property="Background" Value="DarkRed"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo x:Name="TaskbarItem" ProgressState="Normal" ProgressValue="0" controls:TaskbarItemOverlay.Template="{StaticResource OverlayIcon}"/>
    </Window.TaskbarItemInfo>
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="45" UseAeroCaptionButtons="False" ResizeBorderThickness="{x:Static SystemParameters.WindowResizeBorderThickness}"/>
    </WindowChrome.WindowChrome>
    <Grid x:Name="WindowBackground" Background="{StaticResource SecondaryBrush}" WindowChrome.IsHitTestVisibleInChrome="False">
        <Grid.Style>
            <Style TargetType="{x:Type Grid}">
                <Style.Triggers>
                    <DataTrigger Binding="{Binding WindowState, RelativeSource={RelativeSource AncestorType=Window}}" Value="Maximized">
                        <Setter Property="Margin" Value="8"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding WindowState, RelativeSource={RelativeSource AncestorType=Window}}" Value="Normal">
                        <Setter Property="Margin" Value="0"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Grid.Style>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="45" x:Name="CaptionHeight"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Column="0" Grid.ColumnSpan="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="7.5"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Image x:Name="CaptionIcon" Grid.Column="1" Width="17.5" Height="17.5" HorizontalAlignment="Right" Source="{Binding ElementName=TabsUI, Path=SelectedItem.Icon, TargetNullValue='Resources/SLBr.ico'}"/>
            <TextBlock TextTrimming="CharacterEllipsis" x:Name="CaptionTitle" Grid.Column="2" Margin="5,0,0,0" VerticalAlignment="Center" Foreground="{DynamicResource FontBrush}" Text="{Binding ElementName=TabsUI, Path=SelectedItem.Header, TargetNullValue='SLBr'}"/>
        </Grid>
        <Button Height="Auto" VerticalAlignment="Stretch" Click="MinimizeButton_Click" Grid.Column="1" Style="{StaticResource CaptionButtonStyle}" ToolTip="Minimize" Content="&#xe921;"/>
        <Button Height="Auto" VerticalAlignment="Stretch" MouseEnter="MaximizeRestoreButton_MouseEnter" MouseLeave="MaximizeRestoreButton_MouseLeave" Click="MaximizeRestoreButton_Click" Name="MaximizeRestoreButton" Grid.Column="2" Style="{StaticResource CaptionButtonStyle}" Content="&#xe922;"/>
        <Button Height="Auto" VerticalAlignment="Stretch" Click="CloseButton_Click" Grid.Column="3" Style="{StaticResource CaptionCloseButtonStyle}" ToolTip="Close" Content="&#xe8bb;"/>
        <!--<Grid.LayoutTransform>
            <ScaleTransform ScaleX="2.5" ScaleY="2.5"/>
        </Grid.LayoutTransform>-->
        <WinUI:WinUITabControl Grid.RowSpan="2" WindowChrome.IsHitTestVisibleInChrome="True" Grid.ColumnSpan="10" x:Name="TabsUI" SelectionChanged="TabsUI_SelectionChanged" Padding="0" Visibility="Hidden" SelectedIndex="-1">
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <UserControl WindowChrome.IsHitTestVisibleInChrome="False" Content="{Binding Content}" Margin="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </WinUI:WinUITabControl>
        <Grid x:Name="FullscreenContainer" Visibility="Visible">
            <Popup SnapsToDevicePixels="True" x:Name="FullscreenPopup" Placement="Center" IsHitTestVisible="False" Focusable="False" AllowsTransparency="True" IsOpen="False" PopupAnimation="Fade">
                <Border Background="{StaticResource PrimaryBrush}" BorderThickness="1" BorderBrush="{StaticResource BorderBrush}" CornerRadius="5" Opacity="0.8">
                    <TextBlock FontSize="25" Text="To exit fullscreen, press F11 or Esc" Margin="7.5" Foreground="{StaticResource FontBrush}"/>
                </Border>
            </Popup>
        </Grid>
        <Popup x:Name="TabPreviewPopup" SnapsToDevicePixels="True" Placement="Bottom" IsHitTestVisible="False" Focusable="False" AllowsTransparency="True" IsOpen="False" PopupAnimation="Fade" VerticalOffset="-7.5" HorizontalOffset="-10">
            <Border CornerRadius="5">
                <Border.Effect>
                    <DropShadowEffect Direction="-75" ShadowDepth="1" Opacity="0.5" BlurRadius="15" Color="Gray"/>
                </Border.Effect>
                <Border Width="245" Background="{StaticResource PrimaryBrush}" BorderThickness="1" BorderBrush="{StaticResource BorderBrush}" CornerRadius="5" Padding="0,10,0,0" Margin="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock x:Name="TabPreviewHeader" Margin="10,0" FontWeight="Bold" Foreground="{StaticResource FontBrush}"/>
                        <TextBlock x:Name="TabPreviewHost" Grid.Row="1" Margin="10,0,10,10" FontSize="10" Foreground="{StaticResource GrayBrush}"/>
                        <Image RenderOptions.BitmapScalingMode="LowQuality" MaxHeight="150" Grid.Row="2" x:Name="TabPreviewImage" Stretch="Uniform"/>
                        <Border Grid.Row="3" Background="{StaticResource SecondaryBrush}" CornerRadius="0,0,5,5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="TabPreviewStateIcon" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center" FontSize="14" Margin="10,10,7.5,10" FontFamily="{StaticResource IconFontFamily}" Foreground="{StaticResource GrayBrush}"/>
                                <TextBlock Grid.Column="1" x:Name="TabPreviewState" Grid.Row="1" Margin="0,10,10,10" Foreground="{StaticResource GrayBrush}"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
            </Border>
        </Popup>
    </Grid>
</Window>
