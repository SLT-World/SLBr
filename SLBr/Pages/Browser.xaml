                    </Grid>
                </DockPanel>
                <Border BorderThickness="0" x:Name="FavouriteContainer" Margin="0" Padding="0" MinHeight="5" Height="41.25" Grid.Row="1" HorizontalAlignment="Stretch">
                    <ScrollViewer controls:SmoothScrollBehavior.Enable="True" FontFamily="None" x:Name="FavouriteScrollViewer" Margin="5,0,5,5" VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Hidden">
                        <ItemsControl x:Name="FavouritesPanel" HorizontalAlignment="Stretch" ItemsSource="{Binding Favourites}">
                            <ItemsControl.Resources>
                                <DataTemplate x:Key="UrlTemplate">
                                    <Button MaxWidth="150" Width="Auto" BorderBrush="Transparent" HorizontalContentAlignment="Left" Padding="5" VerticalContentAlignment="Center" ToolTip="{Binding Url}" Margin="0,0,5,0" PreviewMouseUp="FavouriteButton_PreviewMouseUp" Height="30" Content="{Binding Name}">
                                        <Button.Resources>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                                <Setter Property="MaxWidth" Value="150"/>
                                            </Style>
                                        </Button.Resources>
                                        <Button.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Icon="&#xe70f;" Click="FavouriteAction_Click" Header="Edit"/>
                                                <MenuItem Icon="&#xe74d;" Click="FavouriteAction_Click" Header="Delete"/>
                                                <Separator/>
                                                <MenuItem Header="Favourites Manager" Icon="&#xe9a4;" Click="ButtonAction" Tag="5&lt;,&gt;slbr://favourites/"/>
                                            </ContextMenu>
                                        </Button.ContextMenu>
                                    </Button>
                                </DataTemplate>
                                <DataTemplate x:Key="FolderTemplate">
                                    <WinUI:DropDownButton MaxWidth="150" Width="Auto" BorderBrush="Transparent" HorizontalContentAlignment="Left" Padding="5" VerticalContentAlignment="Center" Margin="0,0,5,0" Height="30">
                                        <WinUI:DropDownButton.Content>
                                            <DockPanel VerticalAlignment="Center">
                                                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,0,5,0" FontFamily="{StaticResource IconFontFamily}" Text="&#xe8b7;" FontSize="16"/>
                                                <TextBlock TextAlignment="Center" Text="{Binding Name}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </DockPanel>
                                        </WinUI:DropDownButton.Content>
                                        <WinUI:DropDownButton.Resources>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                                <Setter Property="MaxWidth" Value="150"/>
                                            </Style>
                                        </WinUI:DropDownButton.Resources>
                                        <WinUI:DropDownButton.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Icon="&#xe70f;" Click="FavouriteAction_Click" Header="Edit"/>
                                                <MenuItem Icon="&#xe74d;" Click="FavouriteAction_Click" Header="Delete"/>
                                                <Separator/>
                                                <MenuItem Header="Favourites Manager" Icon="&#xe9a4;" Click="ButtonAction" Tag="5&lt;,&gt;slbr://favourites/"/>
                                            </ContextMenu>
                                        </WinUI:DropDownButton.ContextMenu>
                                        <WinUI:DropDownButton.Menu>
                                            <!--TODO: Solve nested folder issue.-->
                                            <ContextMenu MaxWidth="300" ItemsSource="{Binding Children}" VirtualizingPanel.IsVirtualizing="True" VirtualizingPanel.VirtualizationMode="Recycling">
                                                <ContextMenu.ItemContainerStyle>
                                                    <Style TargetType="MenuItem">
                                                        <Setter Property="Header" Value="{Binding Name}"/>
                                                        <Setter Property="ToolTip" Value="{Binding Url}"/>
                                                        <EventSetter Event="PreviewMouseUp" Handler="FavouriteButton_PreviewMouseUp"/>
                                                    </Style>
                                                </ContextMenu.ItemContainerStyle>
                                            </ContextMenu>
                                        </WinUI:DropDownButton.Menu>
                                    </WinUI:DropDownButton>
                                </DataTemplate>
                            </ItemsControl.Resources>
                            <ItemsControl.ItemTemplateSelector>
                                <controls:FavouriteTemplateSelector UrlTemplate="{StaticResource UrlTemplate}" FolderTemplate="{StaticResource FolderTemplate}"/>
                            </ItemsControl.ItemTemplateSelector>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <DockPanel x:Name="FavouriteDockPanel" IsItemsHost="True" Margin="0" HorizontalAlignment="Left"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
                <Border Background="{StaticResource SecondaryBrush}" BorderThickness="0" Margin="0" Grid.Row="2" HorizontalAlignment="Stretch">
                    <Border x:Name="InfoBarContainer" Background="{StaticResource PrimaryBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1" HorizontalAlignment="Stretch">
                        <StackPanel>
                            <ItemsControl VirtualizingPanel.VirtualizationMode="Recycling" x:Name="InfoBarList" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Disabled" ScrollViewer.CanContentScroll="False" BorderThickness="0" Background="Transparent">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Height="40" Margin="5,0,5,5" BorderThickness="1" BorderBrush="{StaticResource BorderBrush}" CornerRadius="5" Background="{StaticResource SecondaryBrush}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
