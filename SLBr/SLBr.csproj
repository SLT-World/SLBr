  <ItemGroup>
    <PackageReference Update="chromiumembeddedframework.runtime.win-arm64" Version="140.1.14" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Update="chromiumembeddedframework.runtime.win-x64" Version="140.1.14" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Update="chromiumembeddedframework.runtime.win-x86" Version="140.1.14" />
  </ItemGroup>

	<Target Name="DeleteFiles" AfterTargets="Publish">
		<Copy SourceFiles="..\Updater\bin\$(Configuration)\net9.0\publish\Updater.exe" DestinationFolder="$(PublishDir)" />
		<Delete Files="$(PublishDir)\Microsoft.Web.WebView2.WinForms.dll" />
		<Delete Files="$(PublishDir)\CefSharp.BrowserSubprocess.exe" />
		<Delete Files="$(PublishDir)\CefSharp.BrowserSubprocess.dll" />
		<Delete Files="$(PublishDir)\CefSharp.BrowserSubprocess.runtimeconfig.json" />
		<ItemGroup>
			<FilesToDelete Include="$(PublishDir)*.pdb;$(PublishDir)\*.xml" />
		</ItemGroup>
		<Delete Files="@(FilesToDelete)">
			<Output TaskParameter="DeletedFiles" ItemName="FilesDeleted" />
		</Delete>
		<Message Text="Deleted PDB files: @(FilesDeleted)" Importance="high" />
	</Target>

